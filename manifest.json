{
  "name": "resumo",
  "description": "Extens√£o do Chrome que gera resumo dos links compartilhados no facebook",
  "version": "0.0.3",
  "icons": {
    "16": "assets/icon_128x128.png",
    "32": "assets/icon_128x128.png",
    "48": "assets/icon_128x128.png",
    "128": "assets/icon_128x128.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "cookies",
    "declarativeContent"
  ],
  "background": {
    "scripts": [
      "common.js",
      "reload.js",
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_icon": {
      "32": "assets/icon_128x128.png"
    },
    "default_title": "Resumo"
  },
  "content_scripts": [
    {
      "matches": ["https://*.facebook.com/*"],
      "css": ["css/extension.css"],
      "js": ["common.js", "client.js"]
    }
  ],
  "manifest_version": 2
}