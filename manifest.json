{
  "name": "resumo",
  "description": "Extens√£o do Chrome que gera resumo dos links compartilhados no facebook",
  "version": "0.0.2",
  "icons": {
    "16": "assets/icon_16x16.png",
    "32": "assets/icon_32x32.png",
    "48": "assets/icon_48x48.png",
    "128": "assets/icon_128x128.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "cookies",
    "declarativeContent"
  ],
  "background": {
    "scripts": [
      "common.js",
      "reload.js",
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_icon": {
      "19": "assets/icon_19x19.png"
    },
    "default_title": "Resumo"
  },
  "content_scripts": [
    {
      "matches": [ "https://*.facebook.com.br/*" ],
      "css": [
        "css/extension.css"
      ],
      "js": [
        "common.js",
        "client.js"
      ]
    }
  ],
  "manifest_version": 2,
  "web_accessible_resources": [
    "assets/icon_38x38.png",
    "assets/icon_19x19.png"
  ]
}